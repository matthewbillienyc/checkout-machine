require 'benchmark'

task :default => :test
task :test do
  Dir.glob('./tests/*_test.rb').each { |file| require file}
end

test_block = lambda do
  Dir.glob('./tests/*_test.rb').each { |f| require f }
end

task :benchtest do
  totals_array = []
  10.times do
    bench = Benchmark.measure do
      10000.times do
        test_block.call
      end
    end
    totals_array << bench.total
  end
  puts totals_array.inject(:+) / 10
end
